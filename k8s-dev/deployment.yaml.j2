apiVersion: apps/v1
kind: Deployment
metadata:
  name: mddash-dev
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mddash-dev
  template:
    metadata:
      labels:
        app: mddash-dev
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1002
        fsGroup: 1002
        fsGroupChangePolicy: "OnRootMismatch"
        runAsNonRoot: true
        seccompProfile:
          type: RuntimeDefault
      containers:      
      - name: mddash-dev
        image: {{ dashboard.devImage if dashboard.devel else dashboard.image }}
        imagePullPolicy: Always
        securityContext:
          runAsNonRoot: true
          allowPrivilegeEscalation: false
          capabilities:
            drop:
            - ALL

        ports:
          - containerPort: 9000
        resources:
          requests:
            cpu: .2
            memory: 4Gi
          limits:
            cpu: 1
            memory: 4Gi
        volumeMounts:
          - mountPath: /mddash
            name: data-volume
        command: ['/start.sh']
        env:
          - name: JUPYTERHUB_USER
            value: {{ dashboard.user }}
          - name: NOTEBOOK_IMAGE
            value: {{ notebook.image }}

      volumes:
        - name: data-volume
          persistentVolumeClaim:
            claimName: mddash-data
